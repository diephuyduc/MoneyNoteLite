<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp"
    android:background="@drawable/bg_color_white_corner16_top_left"
    android:layout_height="wrap_content">
    <TextView
        android:labelFor="@+id/edt_item_title"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_title"/>
    <EditText

        android:id="@+id/edt_item_title"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>
    <Button
        android:layout_margin="10dp"
        android:background="@drawable/bg_green_corner16"
        android:id="@+id/btn_item_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_save"/>

</LinearLayout>